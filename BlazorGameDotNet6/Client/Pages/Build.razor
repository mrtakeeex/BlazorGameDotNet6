@page "/build"

@inject ICoinService CoinService;
@inject IUnitService UnitService;
@inject IToastService ToastService;

@attribute [Authorize]

<h3>Build</h3>

<div class="form-group">
    <select @bind="selectedUnitId" class="form-control">
        @foreach (var unit in UnitService.Units)
        {
            <option value="@unit.Id">@unit.Title (Attack: @unit.Attack, Defense: @unit.Defense) - Price: @unit.CoinCost Coins </option>
        }
    </select>
</div>

<button @onclick="BuildUnit" class="btn btn-primary">Build</button>

@code {
    int selectedUnitId = 1;

    protected override async Task OnInitializedAsync()
    {
        await UnitService.LoadUnitsAsync();
    }

    public async Task BuildUnit()
    {
        await UnitService.AddUnit(selectedUnitId);
    }
}
